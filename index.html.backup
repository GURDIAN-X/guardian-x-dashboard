        .card-title { font-size: 1.2rem; font-weight: bold; color: white; margin-bottom: 0.8rem; text-align: center; }
        .card-description { color: #b0b8c0; text-align: center; line-height: 1.4; margin-bottom: 1.5rem; font-size: 0.85rem; flex: 1; }
        .card-button { background: linear-gradient(45deg, #00d4ff, #0099cc); color: white; border: none; padding: 0.7rem 1.5rem; border-radius: 25px; font-weight: bold; cursor: pointer; transition: all 0.3s ease; width: 100%; font-size: 0.85rem; text-transform: uppercase; letter-spacing: 1px; margin-top: auto; }
        .dashboard-card .card-button:hover { transform: translateY(-2px); box-shadow: 0 10px 20px rgba(0, 212, 255, 0.4); }
        .stats-banner { background: rgba(0, 0, 0, 0.3); backdrop-filter: blur(10px); border-radius: 15px; padding: 1.5rem; margin: 3rem 0; display: flex; justify-content: space-around; flex-wrap: wrap; border: 1px solid rgba(255, 255, 255, 0.1); }
        .stat-item { text-align: center; margin: 0.5rem; } .stat-number { font-size: 2rem; font-weight: bold; color: #00d4ff; display: block; } .stat-label { color: #a0a8b0; font-size: 0.9rem; }
        .cta-section { background: linear-gradient(135deg, rgba(0, 212, 255, 0.1), rgba(255, 107, 53, 0.1)); backdrop-filter: blur(15px); border-radius: 20px; padding: 2.5rem; margin: 4rem auto; text-align: center; border: 1px solid rgba(255, 255, 255, 0.2); position: relative; overflow: hidden; animation: slideUp 1s ease-out 1s both; max-width: 1000px; display: flex; flex-direction: column; align-items: center; }
        .image-slider { width: 100%; height: 220px; position: relative; overflow: hidden; border-radius: 15px; box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5); }
        .cta-header { position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); z-index: 5; width: 90%; max-width: 600px; pointer-events: none; }
        .cta-title { font-size: 1.8rem; font-weight: bold; color: white; margin-bottom: 0.5rem; text-shadow: 0 2px 8px rgba(0, 0, 0, 0.8); }
        .cta-subtitle { font-size: 1rem; color: #e0e6ed; line-height: 1.5; text-shadow: 0 2px 6px rgba(0, 0, 0, 0.8); }
        .cta-button { background: linear-gradient(45deg, #00d4ff, #0099cc); color: white; border: none; padding: 0.8rem 2rem; border-radius: 25px; font-size: 0.95rem; font-weight: bold; cursor: pointer; transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275); text-transform: uppercase; letter-spacing: 1px; box-shadow: 0 8px 20px rgba(0, 212, 255, 0.3); position: relative; overflow: hidden; z-index: 2; margin-top: 2rem; display: inline-block; }
        .cta-button:hover { transform: translateY(-3px) scale(1.03); box-shadow: 0 15px 30px rgba(0, 212, 255, 0.5); }
        .slide { width: 100%; height: 100%; position: absolute; top: 0; left: 0; opacity: 0; transition: opacity 1s ease-in-out; }
        .slide.active { opacity: 1; }
        .slide img { width: 100%; height: 100%; object-fit: cover; }
        .slider-nav { position: absolute; bottom: 10px; left: 50%; transform: translateX(-50%); display: flex; gap: 8px; z-index: 10; }
        .nav-dot { width: 10px; height: 10px; background-color: rgba(255, 255, 255, 0.5); border-radius: 50%; cursor: pointer; transition: all 0.3s ease; }
        .nav-dot.active { background-color: #00d4ff; transform: scale(1.2); }
        .footer { background: rgba(0, 0, 0, 0.4); backdrop-filter: blur(15px); border-top: 1px solid rgba(255, 255, 255, 0.1); padding: 3rem 0 1.5rem 0; margin-top: 2rem; position: relative; z-index: 10; }
        .footer-content { max-width: 1200px; margin: 0 auto; padding: 0 2rem; text-align: center; }
        .footer-brand { margin-bottom: 3rem; }
        .footer-logo { font-size: 2.5rem; font-weight: bold; background: linear-gradient(45deg, #00d4ff, #ff6b35, #f7931e, #00d4ff); background-size: 400% 400%; -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text; animation: gradientShift 3s ease infinite; margin-bottom: 0.5rem; letter-spacing: 1px; }
        .footer-tagline { color: #a0a8b0; font-size: 1.2rem; font-style: italic; margin-bottom: 2rem; }
        .footer-sections { display: grid; grid-template-columns: repeat(3, 1fr); gap: 2rem; margin-bottom: 2rem; }
        .footer-section h4 { color: white; font-size: 1.2rem; font-weight: bold; margin-bottom: 1rem; }
        .footer-links { list-style: none; padding: 0; }
        .footer-links li { margin-bottom: 0.5rem; }
        .footer-links a { color: #a0a8b0; text-decoration: none; font-size: 0.9rem; transition: color 0.3s ease; }
        .footer-links a:hover { color: #00d4ff; }
        .social-links { display: flex; gap: 1rem; justify-content: center; }
        .social-link { display: inline-block; font-size: 1.5rem; text-decoration: none; transition: transform 0.3s ease, filter 0.3s ease; opacity: 0.7; }
        .social-link:hover { transform: translateY(-2px) scale(1.1); opacity: 1; filter: drop-shadow(0 0 10px currentColor); }
        .footer-bottom { max-width: 1200px; margin: 0 auto; padding: 2rem 2rem 1rem 2rem; border-top: 1px solid rgba(255, 255, 255, 0.1); margin-top: 2rem; }
        .footer-bottom p { color: #a0a8b0; font-size: 0.9rem; text-align: center; }

        /* --- MODAL STYLES --- */
        .modal-overlay { position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(29, 35, 50, 0.8); backdrop-filter: blur(8px); z-index: 1000; display: none; align-items: center; justify-content: center; padding: 20px; opacity: 0; transition: opacity 0.4s ease; }
        .modal-overlay.active { display: flex; opacity: 1; }
        .modal-content { position: relative; width: 100%; height: 100%; max-width: 1400px; max-height: 95vh; overflow: hidden; border-radius: 20px; transform: scale(0.9); transition: transform 0.4s ease; display: flex; }
        .modal-overlay.active .modal-content { transform: scale(1); }
        .modal-close-btn { position: absolute; top: 10px; right: 20px; font-size: 2.5rem; font-weight: bold; color: #4b5563; background: transparent; border: none; cursor: pointer; z-index: 1010; }
        .modal-close-btn:hover { color: #1f2937; }
        .pc-tool-container-wrapper { width: 100%; height: 100%; overflow-y: auto; border-radius: 20px; }
        
        /* --- PC GUARDIAN TOOLKIT STYLES (FULL VERSION) --- */
        .pc-tool-container-wrapper { font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); padding: 20px; }
        .pc-tool-container { max-width: 1400px; margin: 0 auto; background: rgba(255, 255, 255, 0.95); border-radius: 20px; padding: 30px; box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1); backdrop-filter: blur(10px); }
        .pc-tool-container .header { margin-bottom: 40px; text-align: center; }
        .pc-tool-container .header h1 { font-size: 4rem; font-weight: 900; background: linear-gradient(45deg, #4f46e5, #7c3aed, #2563eb); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text; letter-spacing: -2px; margin-bottom: 10px; }
        .pc-tool-container .header .subtitle { font-size: 1.2rem; color: #6b7280; font-weight: 500; margin-bottom: 10px; }
        .pc-tool-container .header .badge { display: inline-block; background: linear-gradient(45deg, #4f46e5, #7c3aed); color: white; padding: 8px 16px; border-radius: 20px; font-size: 0.9rem; font-weight: 600; margin-right: 20px; }
        .pc-tool-container .tabs { display: flex; gap: 10px; margin-bottom: 30px; background: #f8fafc; padding: 10px; border-radius: 15px; overflow-x: auto; }
        .pc-tool-container .tab { padding: 12px 20px; border: none; background: transparent; border-radius: 10px; cursor: pointer; font-weight: 600; transition: all 0.3s ease; white-space: nowrap; display: flex; align-items: center; gap: 8px; }
        .pc-tool-container .tab.active { background: linear-gradient(45deg, #4f46e5, #7c3aed); color: white; transform: translateY(-2px); box-shadow: 0 10px 25px rgba(79, 70, 229, 0.3); }
        .pc-tool-container .tab:hover:not(.active) { background: #e2e8f0; }
        .pc-tool-container .tab-content { display: none; animation: fadeIn 0.5s ease-in-out; }
        .pc-tool-container .tab-content.active { display: block; }
        @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
        .pc-tool-container .grid { display: grid; gap: 20px; margin-bottom: 30px; }
        .pc-tool-container .grid-2 { grid-template-columns: repeat(auto-fit, minmax(500px, 1fr)); }
        .pc-tool-container .card { background: white; border-radius: 15px; padding: 25px; box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08); border: 1px solid #e2e8f0; transition: all 0.3s ease; }
        .pc-tool-container .card:hover { transform: translateY(-5px); box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15); }
        .pc-tool-container .card h3 { font-size: 1.3rem; font-weight: 700; color: #1e293b; margin-bottom: 20px; display: flex; align-items: center; gap: 10px; }
        .pc-tool-container .icon { width: 24px; height: 24px; display: inline-block; }
        .pc-tool-container .metric { display: flex; justify-content: space-between; align-items: center; margin-bottom: 15px; }
        .pc-tool-container .metric-label { display: flex; align-items: center; gap: 8px; font-weight: 500; color: #475569; }
        .pc-tool-container .metric-value { font-weight: 700; color: #1e293b; }
        .pc-tool-container .progress-bar { width: 100%; height: 8px; background: #f1f5f9; border-radius: 4px; overflow: hidden; margin-top: 8px; }
        .pc-tool-container .progress-fill { height: 100%; transition: width 0.3s ease; border-radius: 4px; }
        .pc-tool-container .progress-cpu { background: linear-gradient(45deg, #06b6d4, #0ea5e9); }
        .pc-tool-container .progress-memory { background: linear-gradient(45deg, #10b981, #059669); }
        .pc-tool-container .progress-disk { background: linear-gradient(45deg, #f59e0b, #d97706); }
        .pc-tool-container .progress-network { background: linear-gradient(45deg, #8b5cf6, #7c3aed); }
        .pc-tool-container .status-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(150px, 1fr)); gap: 15px; margin-top: 20px; }
        .pc-tool-container .status-item { background: #f8fafc; padding: 15px; border-radius: 10px; text-align: center; }
        .pc-tool-container .status-value { font-size: 1.5rem; font-weight: 800; margin-bottom: 5px; }
        .pc-tool-container .status-label { font-size: 0.875rem; color: #64748b; font-weight: 500; }
        .pc-tool-container .alert { background: #dcfce7; border: 1px solid #bbf7d0; border-radius: 10px; padding: 15px; margin: 15px 0; }
        .pc-tool-container .alert-success { background: #dcfce7; border-color: #bbf7d0; color: #15803d; }
        .pc-tool-container .alert-warning { background: #fef3c7; border-color: #fde68a; color: #92400e; }
        .pc-tool-container .alert-error { background: #fee2e2; border-color: #fecaca; color: #dc2626; }
        .pc-tool-container .system-info { display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; margin-top: 20px; }
        .pc-tool-container .info-item { background: #f8fafc; padding: 15px; border-radius: 10px; }
        .pc-tool-container .info-label { font-size: 0.875rem; color: #64748b; font-weight: 500; margin-bottom: 5px; }
        .pc-tool-container .info-value { font-weight: 700; color: #1e293b; }
        .pc-tool-container .event-item { display: flex; justify-content: space-between; align-items: center; background: #f8fafc; padding: 15px; border-radius: 10px; margin-bottom: 10px; }
        .pc-tool-container .event-info h4 { font-weight: 600; color: #1e293b; margin-bottom: 5px; }
        .pc-tool-container .event-info p { font-size: 0.875rem; color: #64748b; }
        .pc-tool-container .event-status { text-align: right; }
        .pc-tool-container .status-badge { padding: 4px 12px; border-radius: 20px; font-size: 0.875rem; font-weight: 600; }
        .pc-tool-container .status-success { background: #dcfce7; color: #15803d; } .pc-tool-container .status-warning { background: #fef3c7; color: #92400e; } .pc-tool-container .status-error { background: #fee2e2; color: #dc2626; }
        .pc-tool-container .chart-container { position: relative; height: 300px; margin-top: 20px; }
        .pc-tool-container .real-time-indicator { display: inline-flex; align-items: center; gap: 8px; background: #dcfce7; color: #15803d; padding: 8px 12px; border-radius: 20px; font-size: 0.875rem; font-weight: 600; margin-bottom: 20px; }
        .pc-tool-container .pulse { width: 8px; height: 8px; background: #22c55e; border-radius: 50%; animation: pulse 2s infinite; }
        @keyframes pulse { 0% { transform: scale(0.95); box-shadow: 0 0 0 0 rgba(34, 197, 94, 0.7); } 70% { transform: scale(1); box-shadow: 0 0 0 10px rgba(34, 197, 94, 0); } 100% { transform: scale(0.95); box-shadow: 0 0 0 0 rgba(34, 197, 94, 0); } }
        
        /* RESPONSIVENESS */
        @media (max-width: 1200px) { .dashboard-grid { grid-template-columns: repeat(2, 1fr); max-width: 800px; } }
        @media (max-width: 768px) { .dashboard-grid { grid-template-columns: 1fr; max-width: 400px; } .image-slider { height: 180px; } .footer-sections { grid-template-columns: 1fr; } }
        @media (max-width: 480px) { .image-slider { height: 160px; } }
    </style>
</head>
